.order-details__root {
  padding-bottom: 72rpx;
}
.order-details__root .submit-button-wrap {
  padding-bottom: 0;
}
.order-details__root .image-picker {
  margin: 0 -15rpx;
}
.order-details__root .panel-body-options {
  margin-left: -12rpx;
}
.order-details__root .at-checkbox__title {
  font-size: 28rpx;
  color: #666;
}
.order-details__root .at-checkbox::before,
.order-details__root .at-checkbox::after {
  display: none;
}
.order-details__root .at-checkbox__title {
  display: block;
}
.order-details__root .at-checkbox__input-panel {
  padding-left: 64rpx;
  color: #666;
}
.order-details__root .scan-button {
  position: absolute;
  z-index: 100;
  right: 4rpx !important;
  top: 4rpx !important;
}
.order-details__root .input__disabled {
  background-color: #ddd;
}
.order-details__root .input__disabled .at-input--disabled {
  opacity: 0.8;
}
.order-details__root .input__disabled input::-webkit-input-placeholder {
  color: #000;
}
.order-details__root .input__disabled input::-moz-placeholder {
  color: #000;
}
.order-details__root .input__disabled input::-ms-input-placeholder {
  color: #000;
}
.order-details__root .input__disabled input::placeholder {
  color: #000;
}
.order-details__root .input__text {
  padding: 22rpx 12rpx;
  background-color: #f5f5f5;
  color: #333;
  line-height: 1;
  position: relative;
}
.order-details__panel {
  padding: 24rpx;
  background-color: #fff;
}
.order-details__panel-heading {
  padding-bottom: 12rpx;
}
.order-details__panel-heading-arrow {
  float: right;
}
.order-details__panel-heading-title {
  font-size: 42rpx;
  padding-bottom: 12rpx;
  font-weight: 700;
}
.order-details__panel-body {
  font-size: 28rpx;
  position: relative;
}
.order-details__panel-body .at-row {
  color: #666;
  padding: 4rpx 0;
}
.image-list {
  margin: -6rpx -12rpx;
}
.image-list-item {
  width: 25vw;
  height: 25vw;
  padding: 12rpx;
}
.image-list-item .img {
  width: 100%;
  height: 100%;
}
.order-details__root .textarea {
  padding: 12rpx;
}
.order-details__root .textarea input {
  font-size: 28rpx;
}
.order-details__root .at-checkbox__option-wrap {
  padding-right: 0;
}
.order-details__root .at-checkbox__option {
  padding-left: 0;
}
.order-details__root .at-textarea__textarea {
  font-size: 28rpx;
}
.rule-link {
  color: #2254f5;
  font-size: 28rpx;
  margin-left: 24rpx;
  top: -12rpx;
  padding-bottom: 12rpx;
  position: relative;
}