<block wx:if="{{$taroCompReady}}">
    <view class="page bg-gray integral-details__root">
        <view class="at-row integral-details__heading text-primary">
            <view class="at-col">当前积分总计</view>
            <view class="at-col text-right">{{total}}</view>
        </view>
        <view class="at-list">
            <view class="at-row at-list__item table-head">
                <view class="at-col at-col-4 text-underline" bindtap="anonymousFunc0">达成要求?</view>
                <view class="at-col text-center">订单号</view>
                <view class="at-col at-col-2 text-center">积分值</view>
            </view>
            <view class="table-body">
                <view wx:key="id" class="at-row at-list__item" wx:for="{{listData}}" wx:for-item="item" wx:for-index="_anonIdx2">
                    <view class="at-col at-col-4 at-col--wrap">{{item.rewardName}}</view>
                    <view class="at-col text-center">{{item.orderNo || "无"}}</view>
                    <view class="at-col at-col-2 text-center">{{item.direction == 1 ? "+" : "-"}}{{item.integral}}</view>
                </view>
            </view>
        </view>
    </view>
</block>